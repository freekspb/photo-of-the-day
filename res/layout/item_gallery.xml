<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/hram.android.PhotoOfTheDay"
    android:id="@+id/relativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
   
    <hram.android.PhotoOfTheDay.views.SquareImage
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/album_img_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        custom:fixedAlong="width"/>
    
    <LinearLayout 
		android:orientation="vertical"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_below="@+id/album_artwork"
        android:layout_alignLeft="@id/album_artwork"
        android:layout_alignRight="@id/album_artwork"
        android:padding="3dp"
        >

     <TextView android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:ellipsize="end"
        style="@style/GalleryItemShadowText"/>

     <TextView android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceSmall"
         />
    </LinearLayout>

</RelativeLayout>